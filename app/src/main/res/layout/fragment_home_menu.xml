<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeMenuFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/account_detail_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:visibility="gone"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hi_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_black"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="10dp"
                        android:text="Welcome,"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/username_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="10dp"
                        android:text="Voe Academy"
                        android:textSize="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/username_gender_img_view"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:src="@drawable/male_avatar" />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progress_bar"

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"


            android:visibility="visible"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_black"
            android:text="Book Your Classes"
            android:textSize="20dp"

            />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="flex_start"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:justifyContent="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/mathematics_card_view"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_margin="15dp"
                android:tag="Mathematics"
                app:cardBackgroundColor="@color/white"

                app:cardCornerRadius="20dp"

                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:src="@drawable/maths" />

                    <TextView
                        android:id="@+id/Mathematics"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Mathematics"
                        android:textAlignment="center" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/science_card_view"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_margin="15dp"
                android:tag="Science"
                app:cardBackgroundColor="@color/white"


                app:cardCornerRadius="20dp"
                app:cardMaxElevation="12dp"

                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:src="@drawable/physics" />

                    <TextView
                        android:id="@+id/Physics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:tag="Science"
                        android:text="Science"
                        android:textAlignment="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/language_learning_card_view"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_margin="15dp"
                android:tag="Language Learning"
                app:cardBackgroundColor="@color/white"


                app:cardCornerRadius="20dp"
                app:cardMaxElevation="12dp"

                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:src="@drawable/physics" />

                    <TextView
                        android:id="@+id/LanguageLearning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:tag="LanguageLearning"
                        android:text="Language Learning"
                        android:textAlignment="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/digital_literacy_card_view"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_margin="15dp"
                android:tag="Digital Literacy"
                app:cardBackgroundColor="@color/white"


                app:cardCornerRadius="20dp"
                app:cardMaxElevation="12dp"

                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:src="@drawable/chemistry" />

                    <TextView
                        android:id="@+id/digital_literacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:tag="DigitalLiteracy"
                        android:text="Digital Literacy"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"

            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/poppins_black"
            android:text="Announcements and Updates"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"


            />


    </LinearLayout>

</ScrollView>

</LinearLayout>