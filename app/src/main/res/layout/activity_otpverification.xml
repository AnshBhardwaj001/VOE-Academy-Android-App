<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".OTPVerificationActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/voe_academy_otp_verification"
        android:textColor="@color/voe_color"
        app:layout_constraintBottom_toTopOf="@+id/otp_enter_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.508" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have sent you an OTP"
        android:layout_marginTop="20px"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="38dp"
        android:textAlignment="center"

        android:fontFamily="@font/poppins_black"
        android:text="OTP Verification"
        android:background="@color/voe_color"
        android:textColor="@color/white"

        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/otp_enter_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/otp_frame"
        android:hint="Enter Otp Here"
        android:inputType="number"
        android:letterSpacing="0.2"
        android:paddingTop="18dp"

        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/otp_submit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.662" />

    <ProgressBar
        android:id="@+id/progress_bar"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"


        android:visibility="gone"

        app:layout_constraintBottom_toTopOf="@+id/otp_submit_btn"
        app:layout_constraintEnd_toEndOf="@+id/otp_enter_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_enter_text"
        app:layout_constraintVertical_bias="0.759" />

    <Button
        android:id="@+id/otp_submit_btn"
        android:layout_width="250sp"
        android:layout_height="55sp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/custom_login_btn"
        android:paddingLeft="50sp"
        android:paddingRight="50sp"
        android:text="Verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>