<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/notification_cardview"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/payment_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_black"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:text="payment ID"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Amount : 100000"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Teacher : Ansh Bhardwaj"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/no_of_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Classes Booked : 100"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/selected_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Subject : Mathematics"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/selected_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Class : 10"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:text="Check Out Time : 17 March 2023 , 04:04"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/conform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35px"
                android:paddingBottom="10sp"
                android:fontFamily="@font/poppins_black"
                android:text="Classes will be approved soon."
                android:textSize="15dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>