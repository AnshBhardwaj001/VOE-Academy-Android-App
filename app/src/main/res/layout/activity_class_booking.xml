<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClassBookingActivity">

    <TextView
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:textAlignment="center"

        android:fontFamily="@font/poppins_black"
        android:text="Subject"
        android:background="@color/voe_color"
        android:textColor="@color/white"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"

        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/class_teacher_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"


        android:layout_gravity="center"
        android:visibility="visible"


        app:layout_constraintBottom_toTopOf="@+id/otp_submit_btn"
        app:layout_constraintEnd_toEndOf="@+id/otp_enter_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_enter_text"
        app:layout_constraintVertical_bias="0.759" />

</LinearLayout>

