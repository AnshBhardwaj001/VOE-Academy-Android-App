<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountMenuFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/voe_color"
            android:fontFamily="@font/poppins_black"
            android:maxLines="1"

            android:text="Notifications"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp"

            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/voe_color"
            android:fontFamily="@font/poppins"


            android:text="Once the class is booked you will get a call from teacher within 24 hrs to schedule the booked classes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12dp"

            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/not_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </LinearLayout>

</RelativeLayout>